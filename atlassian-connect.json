{
    "key": "APIDP-Webhook",
    "name": "Webhook",
    "description": "Webhooks for Confluence Cloud",
    "vendor": {
        "name": "Versa-API-DP",
        "url": "https://versa-networks.com/"
    },
    "baseUrl": "https://bm1-us.apidp.versa-test.net/v1/confluence",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/webhook"
    },
    "scopes": [
        "READ"
    ],
    "modules": {
        "webhooks": [
        {
            "event": "comment_created",
            "url": "/webhook?event_type=comment_created"
        },
	{
	    "event": "comment_updated",
	    "url": "/webhook?event_type=comment_updated"
	},
	{
	    "event": "comment_removed",
	    "url": "/webhook?event_type=comment_removed"
	},
	{
            "event": "attachment_created",
            "url": "/webhook?event_type=attachment_created"
        },
        {
            "event": "attachment_updated",
            "url": "/webhook?event_type=attachment_updated"
        },
	{
	    "event": "attachment_removed",
	    "url": "/webhook?event_type=attachment_removed"
	},
	{
	    "event": "attachment_trashed",
	    "url": "/webhook?event_type=attachment_trashed"
	}
        ]
    }
}
